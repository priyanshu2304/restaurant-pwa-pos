{
  "name": "restaurant-pwa-pos",
  "version": "1.0.0",
  "private": true,
  "description": "Mobile-first React (TS) PWA for 80mm thermal printing with FY-wise invoice numbering and mock backend.",
  "scripts": {
    "dev": "concurrently -k -n server,client \"npm:dev:server:pg\" \"npm:dev:client\"",
    "dev:pg": "concurrently -k -n server,client \"npm:dev:server:pg\" \"npm:dev:client\"",
    "dev:client": "vite",
    "dev:server": "node server/index.js",
    "dev:server:pg": "node server-postgres/index.js",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "idb": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "papaparse": "^5.4.1",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitest": "^2.0.5"
  }
}
